{
    "compileOnSave": true,
    "compilerOptions": {
        "lib":[
            "ES5"
        ],
        "target": "ES5",
        "module": "CommonJS",
        "strict": true,
        "outDir": "./dist",
        "baseUrl": "./core",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true, 
        "moduleResolution": "node",
        "sourceMap": true,
        "types": [
            "reflect-metadata"
        ],
        "removeComments": true,
        "declarationMap": true,
        "allowSyntheticDefaultImports": true,
        "incremental": true,
        "skipLibCheck": true,
    },
    "exclude": ["./node-modules/**/.ts"],
    "include": ["./**/*.ts"]
}